file = {:Users/joeappleton/Downloads/2561-Article Text-21777-1-10-20160923.pdf:pdf},
issn = {14923831},
journal = {International Review of Research in Open and Distance Learning},
keywords = {Computer-mediated communication,Course format,Extra-class communication (ECC),Hybrid education,Online learning,Online teaching,Out-of-class communication (OCC),Teacher approachability},
number = {5},
pages = {235--247},
title = {{Exploring communication and course format: Conversation frequency and duration, student motives, and perceived teacher approachability for out-of-class contact}},
