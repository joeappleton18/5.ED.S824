doi = {10.1177/1326365X17701792},
file = {:Users/joeappleton/Desktop/tmp/lit{\_}review{\_}profile/harris2017.pdf:pdf},
issn = {23215410},
journal = {Asia Pacific Media Educator},
keywords = {Virtual partnerships,e-service learning,global citizen,mediated intercultural communication,remote engagement,transnational},
